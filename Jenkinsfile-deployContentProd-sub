pipeline {
    agent any

    triggers {
        eventTrigger jmespathQuery("event=='deploy-content-prod'")
    }
    parameters { 
        string(name: 'version', defaultValue: '', description: 'What is the deployment environment?') 
        choice(name: 'application', choices: ['One', 'Two', 'Three'], description: 'Pick an application')
    }
    stages {
        stage('Parse Event') {
            steps {
                echo currentBuild?.getBuildCauses()[0]?.event?.toString()
                echo currentBuild?.getBuildCauses()[0]?.event?.application?.toString()
                echo currentBuild?.getBuildCauses()[0]?.event?.version?.toString()
            }
        }
    }
}
